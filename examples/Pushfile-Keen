#!/usr/bin/env ruby

require 'pushover'

job do

  every 10.seconds

  keen do
    event_collection 'votes'
    analysis_type 'count'
  end

  sendgrid do |response|
    to 'josh@keen.io'
    from 'pushover@keen.io'
    subject "There were #{response} Votes Today!"
    body response.inspect
  end

end
